<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_patient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.etouchcare.ViewPatientActivity">

    <TextView
        android:text="Patient Detail View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_head"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4">

        <TextView
            android:text="Name: Michael Jackson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/tv_profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

        <TextView
            android:text="ID: 123789456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/tv_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Room: #45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/tv_room"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


    </GridLayout>


    <Button
        android:text="Condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_condition" />
    <Button
        android:text="Diagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_diagnosis" />
    <Button
        android:text="Tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tests" />
    <Button
        android:text="Records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_records" />
</LinearLayout>
