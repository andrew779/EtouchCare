<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    >
    <TableRow>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignParentStart="true"
                android:id="@+id/condition_index"
                android:gravity="center"
                android:text="#1"
                 />
            <Button
                android:id="@+id/condition_btn_detail"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:text="detail"/>
            <TextView
                android:id="@+id/condition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/condition_index"
                android:text="Cough"/>
            <TextView
                android:id="@+id/condition_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="20"
                android:layout_toEndOf="@+id/condition_index"
                android:layout_below="@+id/condition_title"
                android:text="This is not a big deal description"
                />



        </RelativeLayout>

    </TableRow>
</TableLayout>