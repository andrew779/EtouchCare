<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.etouchcare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.etouchcare.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyPatientsListActivity" />
        <activity android:name=".ViewPatientActivity"
            android:parentActivityName=".MyPatientsListActivity"/>
        <activity android:name=".ConditionActivity"
            android:parentActivityName=".ViewPatientActivity"/>
        <activity android:name=".DiagnosisActivity"
            android:parentActivityName=".ViewPatientActivity"/>
        <activity android:name=".TestsActivity"
            android:parentActivityName=".ViewPatientActivity"/>
    </application>

</manifest>